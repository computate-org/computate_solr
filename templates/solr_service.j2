[Unit]
Description=An open source search engine. 
After=network.target

[Service]
Type=simple
User={{ USER_NAME }}
Group={{ USER_NAME }}
WorkingDirectory={{ SOLR_OPT }}
ExecStart=/usr/bin/podman --name {{ APP_NAME }} -v {{ SOLR_DATA }}:{{ SOLR_DATA }} -h localhost -p {{ SOLR_PORT }}:{{ SOLR_PORT }} {{ APP_NAME }}
Environment=ZK_HOSTNAME={{ ZOOKEEPER_HOST_NAME }}
LimitNOFILE=65000
LimitNPROC=65000
Restart=on-failure

[Install]
WantedBy=multi-user.target

