{
  "authentication": {
    "blockUnknown": true,
    "class": "solr.BasicAuthPlugin",
    "credentials": {
      "{{SOLR_SOLRJ_USER}}": "{{ SOLR_HASH }}"
    },
    "realm": "Solr users",
    "forwardCredentials": false
  },
  "authorization": {
    "class": "solr.RuleBasedAuthorizationPlugin",
    "permissions": [
      {
        "name": "security-edit",
        "role": "admin"
      }
    ],
    "user-role": {
      "{{SOLR_SOLRJ_USER}}": "admin"
    }
  }
}

